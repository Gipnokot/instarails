<%= form_with(model: [post, comment], local: true, class: "space-y-4") do |f| %>
  <% if comment.errors.any? %>
    <div class="alert alert-error shadow-lg">
      <div>
        <strong><%= pluralize(comment.errors.count, "ошибка") %>:</strong>
        <ul>
          <% comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :body, "Комментарий", class: "label" %>
    <%= f.text_area :body, rows: 3, class: "textarea textarea-bordered w-full", placeholder: "Напишите комментарий..." %>
  </div>

  <div class="flex justify-end">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
