<div class="max-w-md mx-auto mt-24 p-8 bg-white rounded-3xl shadow-xl">
  <h2 class="text-3xl font-extrabold mb-8 text-center text-primary">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :email, "Email address", class: "block font-semibold text-gray-700 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "input input-bordered input-primary w-full" %>
    </div>

    <div class="flex justify-center">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-wide" %>
    </div>
  <% end %>

  <div class="mt-8 text-center text-sm text-gray-500">
    <%= render "devise/shared/links" %>
  </div>
</div>
