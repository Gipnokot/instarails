<h2 class="text-3xl font-bold mb-8 text-center text-primary">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true, class: "max-w-md mx-auto bg-white p-8 rounded-2xl shadow-lg space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email, class: "block text-sm font-semibold mb-1" %>
    <%= f.email_field :email, autofocus: true, class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= f.label :username, class: "block text-sm font-semibold mb-1" %>
    <%= f.text_field :username, class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= f.label :bio, class: "block text-sm font-semibold mb-1" %>
    <%= f.text_area :bio, rows: 4, class: "textarea textarea-bordered w-full" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-semibold mb-1" %>
    <p class="text-xs italic text-gray-500 mb-1">(leave blank if you don't want to change it)</p>
    <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-semibold mb-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= f.label :current_password, class: "block text-sm font-semibold mb-1" %>
    <p class="text-xs italic text-gray-500 mb-1">(we need your current password to confirm your changes)</p>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered w-full" %>
  </div>

  <div class="text-center">
    <%= f.submit "Update", class: "btn btn-primary btn-wide" %>
  </div>
<% end %>
