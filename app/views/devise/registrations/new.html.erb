<h2 class="text-3xl font-bold mb-8 text-center text-primary">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "max-w-md mx-auto bg-white p-8 rounded-2xl shadow-lg space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email, class: "block text-sm font-semibold mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-semibold mb-1" %>
    <% if @minimum_password_length %>
      <p class="text-xs italic text-gray-500 mb-1">(<%= @minimum_password_length %> characters minimum)</p>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-semibold mb-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
  </div>

  <div class="text-center">
    <%= f.submit "Sign up", class: "btn btn-primary btn-wide" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <%= render "devise/shared/links" %>
</div>
