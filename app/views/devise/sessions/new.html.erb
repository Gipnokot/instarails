<h2 class="text-3xl font-bold mb-8 text-center text-primary">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-w-md mx-auto bg-white p-8 rounded-2xl shadow-lg space-y-6" }) do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-semibold mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-semibold mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center space-x-2">
      <%= f.check_box :remember_me, class: "checkbox" %>
      <%= f.label :remember_me, class: "text-sm select-none" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= f.submit "Log in", class: "btn btn-primary btn-wide" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <%= render "devise/shared/links" %>
</div>
