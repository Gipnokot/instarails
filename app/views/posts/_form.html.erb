<%= form_with model: post, local: true, html: { class: "space-y-6" } do |form| %>
  <% if post.errors.any? %>
    <div role="alert" class="alert alert-error shadow-lg">
      <div>
        <i class="lucide lucide-alert-circle"></i>
        <span><%= pluralize(post.errors.count, "error") %> не позволили сохранить пост:</span>
      </div>
      <ul class="list-disc list-inside mt-2 text-sm text-red-100">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-control">
    <%= form.label :title, class: "label" do %>
      <span class="label-text">Title</span>
    <% end %>
    <%= form.text_field :title, class: "input input-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= form.label :body, class: "label" do %>
      <span class="label-text">Post description</span>
    <% end %>
    <%= form.text_area :body, rows: 4, class: "textarea textarea-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= form.label :image, class: "label" do %>
      <span class="label-text">Picture</span>
    <% end %>
    <%= form.file_field :image, direct_upload: true, class: "file-input file-input-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= form.submit post.persisted? ? "Update post" : "Create post", class: "btn btn-primary w-full" %>
  </div>
<% end %>
