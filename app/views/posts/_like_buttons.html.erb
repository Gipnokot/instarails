<% like = post.likes.find { |l| l.user_id == current_user.id } %>

<div class="flex items-center gap-3 px-4 py-2">
  <% if like %>
    <%= button_to '💔', post_like_path(post, like),
          method: :delete,
          data: { turbo_stream: true },
          class: 'btn btn-sm btn-outline btn-error tooltip',
          title: 'Remove Like' %>
  <% else %>
    <%= button_to '❤️', post_likes_path(post),
          method: :post,
          data: { turbo_stream: true },
          class: 'btn btn-sm btn-primary tooltip',
          title: 'Like post' %>
  <% end %>

  <p class="text-sm text-gray-600"><%= pluralize(post.likes_count, 'Like') %></p>
</div>
