<h1>Posts</h1>

<p>
  <%= link_to 'New Post', new_post_path %>
</p>

<ul>
  <% @posts.each do |post| %>
    <li>
      <strong><%= link_to post.title, post_path(post) %></strong>
      <br>
      <small>
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
      </small>
    </li>
  <% end %>
</ul>

<%= pagy_nav(@pagy) %>
